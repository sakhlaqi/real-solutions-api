# Application
APP_NAME=RealSolutions Multi-Tenant API
APP_ENV=development
DEBUG=true
API_VERSION=v1

# Django Secret Key - Generate a new one for production
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DB_NAME=real_solutions
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=jdbc:postgresql://localhost:5432/real_solutions
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# JWT Configuration
JWT_SIGNING_KEY=your-jwt-signing-key-change-in-production
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ALGORITHM=HS256
JWT_ISSUER=realsolutions-api
JWT_AUDIENCE=realsolutions-api

# Environment
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Redis (for token blacklist and caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TOKEN_BLACKLIST_DB=1

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
